{
  "name": "@twonote/root",
  "private": true,
  "scripts": {
    "build": "concurrently \"npm:*:build\"",
    "client:build": "cd client && npx parcel build src/index.html",
    "client:install": "cd client && npm install",
    "client:start": "cd client && npx parcel src/index.html",
    "install": "concurrently \"npm:*:install\" \"npm install\"",
    "server:build": "cd server && tsc",
    "server:install": "cd server && npm install",
    "server:start": "cd server && concurrently \"tsc -w\" \"nodemon -w dist dist/index.js\"",
    "start": "concurrently \"npm:*:start\"",
    "test": "prettier --list-different \"./**/*.ts\"; eslint \"./**/*.{ts,tsx}\"",
    "types:build": "cd types && tsc",
    "types:install": "cd types && npm install",
    "types:start": "cd types && tsc -w"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@hapi/hapi": "^19.1.1"
  }
}
